<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manageDoorbellPage.ManageDoorbellActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/ManageDoorbellHeaderFragment"
        android:name="com.example.knockly.shared.PageHeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/ReceiveNotifsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="ToggleButton"
        android:textOff="No"
        android:textOn="Yes"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ReceiveNotifsLabel"
        app:layout_constraintTop_toBottomOf="@+id/ManageDoorbellHeaderFragment" />

    <TextView
        android:id="@+id/ReceiveNotifsLabel"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/receiveNotifsLabel"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ManageDoorbellHeaderFragment" />
</androidx.constraintlayout.widget.ConstraintLayout>